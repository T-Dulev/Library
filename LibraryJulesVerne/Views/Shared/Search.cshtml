@page
@model LibraryJulesVerne.Context.LibraryJulesVerneContext
@* @{
}
@page "/search"
@model LibraryJulesVerne.Pages.SearchModel
 *@@{
    ViewData["Title"] = "Търсене на читатели";
}

<h2>Търсене на читатели</h2>
<form method="get">
    <input type="text" name="name" placeholder="Въведете име на автор" />
    <button type="submit">Търси</button>
</form>

@if (Model.Readers != null && Model.Readers.Any())
{
    <h3>Резултати</h3>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>EGN</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reader in Model.Readers)
            {
                <tr>
                    <td>@reader.ID</td>
                    <td>@reader.FirstName</td>
                    <td>@reader.LastName</td>
                    <td>@reader.EGN</td>
                    <td>@reader.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model is null)
{
    <p>Няма намерени резултати.</p>
}